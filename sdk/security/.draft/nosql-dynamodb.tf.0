module "dynamodb" {
  source = "../modules/database/core/dynamodb"

  db_attributes = {
    id    = "S"
    ts = "N"
  }
  primary_key = "id"
  secondary_key = "ts"
  tags = var.tags
  namespace = var.namespace
  table_name = "default-nosql-table-mock_${random_integer.priority.id}"
}

output "dynamodb" {
  value = module.dynamodb
}